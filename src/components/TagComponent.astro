---
const allPosts = await Astro.glob("../pages/blog/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<!-- grid grid-cols-2 gap-2 sm:grid-cols-3 md:grid-cols-5 -->
<div class="subject-pills">
  <div class="flex flex-wrap justify-center gap-4 mt-8">
    {
      tags.map((tag) => (
        <span class=" justify-center w-auto flex items-center rounded-md bg-green-50 px-2 py-2 text-s font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
          {tag}
          <img src="/JavaScript-logo.png" class="w-8 rounded pl-2" />
        </span>
      ))
    }
  </div>
</div>
