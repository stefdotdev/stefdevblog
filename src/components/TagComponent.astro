---
const allPosts = await Astro.glob("../pages/blog/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const tagStyles = { Astro: "red", Code: "blue", "How to Learn": "yellow" };
---

<div class="subject-pills">
  <div class="flex flex-wrap justify-center gap-4 mt-8">
    {
      tags.map((tag) => (
        <span
          class={`bg-${
            tagStyles[tag] || "green"
          }-50 justify-center w-auto flex items-center rounded-md  px-2 py-2 text-s text-grey-500 font-medium ring-1 ring-inset ring-gray-500/10`}
        >
          {tag}
          <img src="/JavaScript-logo.png" class="w-8 rounded pl-2" />
        </span>
      ))
    }
  </div>
</div>
