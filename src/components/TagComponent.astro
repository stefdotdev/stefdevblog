---
const allPosts = await Astro.glob("../pages/blog/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const tagStyles = {
  Dev: "blue",
  Fitness: "red",
  "How To Learn": "purple",
  "Language Learning": "orange",
  Thoughts: "green",
};
---

<div class="subject-pills">
  <div class="flex flex-wrap justify-center gap-4 mt-8">
    {
      tags.map((tag) => (
        <span
          class={`bg${
            tagStyles[tag] || "slate"
          } justify-center w-auto flex items-center rounded-md  px-2 py-2 text-s text-grey-500 font-medium ring-1 ring-inset ring-gray-500/10`}
        >
          {tag}
        </span>
      ))
    }
  </div>
</div>
