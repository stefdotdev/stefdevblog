---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroComponent from "../components/HeroComponent.astro";
import FrontPosts from "../components/FrontPosts.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("blog");
---

<BaseLayout pageTitle="Stef.dev | Blog">
  <div class="mx-1">
    <HeroComponent />
    <hr class="mx-auto max-w-4xl my-8" />
    <div class="latest-posts mx-auto max-w-2xl">
      <FrontPosts posts={posts} />
    </div>
  </div>
</BaseLayout>
